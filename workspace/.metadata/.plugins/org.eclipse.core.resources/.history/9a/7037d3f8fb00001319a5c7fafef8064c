package view;

import java.awt.event.ActionListener;
import java.io.File;

import model.Model;

import peakml.IPeak;
import peakml.IPeakSet;

public class View {
	
	model.Model model;
	
	LinkingFrame linkFrame;
	PeakFrame peakFrame;
	
	File inputFile;

	public View(Model theModel) {
		// init frames
		linkFrame = new LinkingFrame();
		peakFrame = new PeakFrame();
		linkFrame.setVisible(true);
	}

	public void addLoadPeaksListener(ActionListener peakLoadListener){
		linkFrame.getJMenuBar().getMenu(0).getItem(0).addActionListener(peakLoadListener);
	}
	
	public void addDisplayPeakPlotsListener(ActionListener peakPlotsDisplayListener){
		linkFrame.updateButton.addActionListener(peakPlotsDisplayListener);
	}
	
	public void displayPeakList(IPeakSet<IPeak> peakset){
		linkFrame.updatePeakTable(peakset);
	}
	
//	void addMultiplyListener(ActionListener mal) {
//        m_multiplyBtn.addActionListener(mal);
//    }

}
